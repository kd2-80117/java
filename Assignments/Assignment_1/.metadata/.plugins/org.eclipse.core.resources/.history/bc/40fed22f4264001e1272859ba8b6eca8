package a1q4_part_b;

public class a1q4_part_b {
	public static void main(String[] args) {

		for (int i = 1; i <= 6; i++) {
			for (int k = 5; k > =i; k--) {
				System.out.print(" ");
			}

			for (int j = 0; j < 2*i-1; j++) {

				System.out.print("*");
			}

			System.out.println();
		}

//		for (int i = 0; i < 6; i++) {
//			for (int k = 0; k <i; k++) {
//				System.out.print(" ");
//			}
//
//			for (int j = 5; j > i; j--) {
//
//				System.out.print("* ");
//			}
//			System.out.println();
//		}

	}
}
